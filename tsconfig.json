{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "esnext.intl",
      "es2017.intl",
      "es2018.intl"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "src",
    "public"
  ],
  "watchOptions": {
    "excludeDirectories": ["src/custom-surf", "src/custom-example"]
  },
  "exclude": ["src/custom-surf", "src/custom-example"]
}
